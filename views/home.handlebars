<h2>Here's a list of our current games:</h2> 
<button id="limit" type="button" class="btn btn-info">Limit to 5 products</button>
<button id="next-page" type="button" class="btn btn-info" disabled>Go to next page</button>
<div class="container">
  <div class="row justify-content-center">
    {{#each games}}
    <div class="card col-3 m-1" style="width: 18rem;">
      <img class="card-img-top" src={{thumbnail}} alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text">{{description}}</p>
      </div>
    </div>
    {{/each}}
  </div>
</div>
